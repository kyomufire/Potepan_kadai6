<h3>予定編集</h3>

<%= render "shared/error", obj: @plan %>

<%= form_with model: @plan do |f| %>
    <table>
        <tr>
            <th><%= f.label :title ,"タイトル" %></th>
            <td><%= f.text_field :title %></td>
        </tr>
        <tr>
            <th><%= f.label :start_date ,"開始日" %></th>
            <td><%= f.date_field :start_date, min: Time.zone.now %></td>
        </tr>
        <tr>
            <th><%= f.label :end_date ,"終了日" %></th>
            <td><%= f.date_field :end_date, min: Time.zone.now %></td>
        </tr>
        <tr>
            <th><%= f.label :allday ,"終日" %></th>
            <td><%= f.check_box :allday, {}, true %></td>
        </tr>
        <tr>
            <th><%= f.label :schedule ,"スケジュールメモ" %></th>
            <td><%= f.text_area :schedule %></td>
        </tr>
    </table>

    <div>
        <ul>
            <li><%= f.submit "保存" %></li>
            <li><%= link_to "キャンセル", :plans %></li>
        </ul>
    </div>
<% end %>