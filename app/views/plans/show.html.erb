<h3>予定詳細</h3>

<table>
    <tr>
        <th>タイトル</th>
        <td><%= @plan.title %></td>
    </tr>
    <tr>
        <th>開始日</th>
        <td><%= @plan.start_date.present? ? @plan.start_date.strftime("%Y年%m月%d日") : "" %></td>
    </tr>
    <tr>
        <th>終了日</th>
        <td><%= @plan.end_date.present? ? @plan.end_date.strftime("%Y年%m月%d日") : "" %></td>
    </tr>
    <tr>
        <th>終日</th>
        <td><%= @plan.allday ? "○" : "" %></td>
    </tr>
        <tr>
        <th>スケジュールメモ</th>
        <td><%= @plan.schedule %></td>
    </tr>

</table>

<div>
    <ul>
        <li><%= link_to "編集", [:edit, @plan] %></li>
        <li><%= link_to "ユーザー情報一覧に戻る", :plans %></li>
    </ul>
</div>